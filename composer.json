{
  "name": "zrnik/mksql",
  "description": "MkSQL is a tool for keeping your tables up to date with PHP code. You can use it in your project or as a database preparation in your integration tests.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "type": "library",
  "keywords": [
    "sql",
    "table",
    "create",
    "mysql",
    "sqlite"
  ],
  "license": "MIT",
  "homepage": "https://github.com/Zrnik/MkSQL",
  "authors": [
    {
      "name": "Štěpán Zrník",
      "email": "stepan@zrnik.eu",
      "homepage": "https://stepan.zrnik.eu/"
    }
  ],
  "scripts": {
    "tests": [
      "composer phpstan",
      "composer phpunit"
    ],
    "phpstan": "phpstan analyse  --memory-limit 1G",
    "phpunit": "phpunit --coverage-html ./temp/coverage-html --coverage-xml ./temp/coverage-xml",
    "phpunit:unit": "phpunit --testsuite unit",
    "phpunit:integration": "phpunit --testsuite integration"
  },
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "nette/utils": "^3.0",
    "zrnik/enum": "^1",
    "jetbrains/phpstorm-attributes": "^1.0"
  },
  "require-dev": {
    "tracy/tracy": "^2",
    "phpunit/phpunit": "^9",
    "phpstan/phpstan": "^0.12",
    "phpstan/phpstan-phpunit": "^0.12",
    "nette/neon": "^3",
    "brick/date-time": "^0.3",
    "zrnik/phpunit-exceptions": "^0.0.3"
  },
  "autoload": {
    "psr-4": {
      "Zrnik\\MkSQL\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Examples\\": "examples/"
    }
  },
  "extra": {
    "cleaner-ignore": {
      "zrnik/mksql": true
    }
  }
}
